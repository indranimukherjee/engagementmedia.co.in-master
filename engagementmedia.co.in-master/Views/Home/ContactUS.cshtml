                            <div>@Html.LabelFor(m => m.Message)</div>
                            <div>@Html.TextAreaFor(m => m.Message, new { @class = "textarea" })</div>
                            <div>
                                <input type="image" src="../../Content/images/submit.png" name="submit" value="Send" id="button"/>
                            </div>
                       
            }
        }
